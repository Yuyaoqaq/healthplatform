<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cy.healthplat.mapper.EasyuserMapper">

    <resultMap id="BaseResultMap" type="com.cy.healthplat.pojo.Easyuser">
            <id property="id" column="id" />
            <result property="username" column="username" />
            <result property="password" column="password" />
            <result property="email" column="email" />
            <result property="role" column="role" />
            <result property="state" column="state" />
    </resultMap>

    <sql id="Base_Column_List">
        id,username,password,email,role,state
    </sql>
    <update id="updateRole">
        update easyuser
        <set>
            role = #{role}
        </set>
        <where>
            id = #{id}
        </where>
    </update>
    <delete id="deleteUserById">
        delete from easyuser
        where id = #{id}
    </delete>
    <select id="rolePie" resultType="com.cy.healthplat.web.dto.PieDTO">
        select
            count(*) value,role name
        from
            easyuser
        group by role
    </select>
</mapper>
